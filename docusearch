#!/usr/bin/env bash
# DocuSearch - Main entry point for managing the document search system

  case "$1" in
    --start|start)
      exec ./scripts/start-all.sh "${@:2}"
      ;;
    --stop|stop)
      exec ./scripts/stop-all.sh "${@:2}"
      ;;
    --status|status)
      exec ./scripts/status.sh "${@:2}"
      ;;
    *)
      echo "Usage: $0 {--start|--stop|--status}
  [options]"
      echo "  --start   Start all services"
      echo "  --stop    Stop all services"
      echo "  --status  Check service status"
      exit 1
      ;;
  esac
